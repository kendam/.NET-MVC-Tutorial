@page
@model NETAPP.Pages.ContactModel
@{
    
}

<div class="text-center">
    <div class="row">
        <div class="col"></div>
        <div class="col">
            <h3> Send us a message </h3>
            <div>
                <form method="post">
                    <div class="row">
                        <div class="col">
                            <input type="text" class="form-control" asp-for="FullName"  placeholder="Your FullName" />
                        </div>

                    </div>
                    <div class="row">
                        <div class="col">
                            <input type="text" class="form-control" name="emailAddress" asp-for="EmailAddress" placeholder="Your Email Address" />
                        </div>

                    </div>
                    <div class="row">
                        <div class="col">
                            <input type="text" class="form-control" name="phone" asp-for="Phone" placeholder="Your Phonenumber" />
                        </div>

                    </div>
                    <div class="row">
                        <div class="col">

                            <textarea name="message" class="form-control" asp-for="Message" placeholder="Your Message"></textarea>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col">

                           <input type="submit" name="submit" class="btn btn-block" />
                        </div>

                    </div>

                </form>
            </div>
            <div>
                @if (!string.IsNullOrEmpty(Model.FullName))
                {
                    <h3> Thank you for contacting us !</h3>
                    <p>Your Name :  @Model.FullName </p>
                    <p>Your phonenumber :  @Model.Phone </p>
                    <p>Message:  @Model.Message </p>

                }
            </div>
        </div>
    </div>
</div>